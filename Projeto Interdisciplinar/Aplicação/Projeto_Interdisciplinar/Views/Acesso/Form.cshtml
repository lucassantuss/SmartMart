@model UsuarioViewModel
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Cadastro de Cliente</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Save" enctype="multipart/form-data">
            <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />
            <label for="Id" class="control-label">Código </label>
            @if (ViewBag.Operacao == "I")
            {
        <input asp-for="Id" class="form-control" /> }
            else
            {
        <input asp-for="Id" class="form-control" readonly />            
            }
            <span asp-validation-for="Id" class="text-danger"></span>

            <br />
            @*<input type="file" name="Imagem" id="Imagem" onchange="exibirImagem()" class="btn btn-secondary">
            <img id="imgPreview" src="data:image/jpeg;base64,@Model.Foto.ImagemEmBase64" class="img-responsive"
                 width="100">
            <span asp-validation-for="Foto.Imagem" class="text-danger"></span>*@

            <br />
            <label for="LoginUsuario" class="control-label">Login </label>
            <input asp-for="LoginUsuario" class="form-control" />
            <span asp-validation-for="LoginUsuario" class="text-danger"></span>

            <label for="SenhaUsuario" class="control-label">Senha </label>
            <input asp-for="SenhaUsuario" class="form-control" />
            <span asp-validation-for="SenhaUsuario" class="text-danger"></span>

            <label for="Perfil" class="control-label">Perfil </label>
            <input asp-for="Perfil" class="form-control" />
            <span asp-validation-for="Perfil" class="text-danger"></span>

            <br />
            <input type="submit" value="Salvar dados" />
            <br />
            <span class="text-danger">@ViewBag.Erro</span>
        </form>
    </div>
</div>

<script>
    function exibirImagem() {
        var oFReader = new FileReader();
        oFReader.readAsDataURL(document.getElementById("Imagem").files[0]);
        oFReader.onload = function (oFREvent) {
            document.getElementById("imgPreview").src = oFREvent.target.result;
        };
    }
</script>