@model ClienteViewModel
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

    <link rel="stylesheet" href="~/css/required.css" />

<br />
@if (ViewBag.Operacao == "I")
{ 
    <h2>Cadastro de Cliente</h2>    
}
else { 
    <h2>Dados do Cliente</h2>
}
<br />
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Save">
            <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />
            <input asp-for="Id" class="form-control" type="hidden" />

            <label for="NomeCliente" class="control-label">Nome</label><span id="obg"> *</span>
            <input asp-for="NomeCliente" class="form-control" />
            <span asp-validation-for="NomeCliente" class="text-danger"></span>

            <br />
            <label for="EnderecoCliente" class="control-label">Endereço </label>
            <input asp-for="EnderecoCliente" class="form-control" />
            <span asp-validation-for="EnderecoCliente" class="text-danger"></span>

            <br />
            <label for="EmailCliente" class="control-label">E-mail </label>
            <input asp-for="EmailCliente" class="form-control" />
            <span asp-validation-for="EmailCliente" class="text-danger"></span>

            <br />
            <label for="TelefoneCliente" class="control-label">Telefone </label>
            <input asp-for="TelefoneCliente" class="form-control" />
            <span asp-validation-for="TelefoneCliente" class="text-danger"></span>

            <br />
            <input type="submit" value="Salvar dados" class="btn btn-success" />
            <br />
            <span class="text-danger">@ViewBag.Erro</span>
        </form>
    </div>
</div>