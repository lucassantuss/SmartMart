@model ProdutoViewModel

@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Cadastro de Produto</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Save">
            <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />
            <label for="Id" class="control-label">Código </label>
            @if (ViewBag.Operacao == "I")
            {
                <input asp-for="Id" class="form-control" /> 
            }
            else
            {
                <input asp-for="Id" class="form-control" readonly />
            }
            <span asp-validation-for="Id" class="text-danger"></span>

            <br />
            <label for="NomeProduto" class="control-label">Nome </label>
            <input asp-for="NomeProduto" class="form-control" />
            <span asp-validation-for="NomeProduto" class="text-danger"></span>

            <label for="FotoProduto" class="control-label">Foto </label>
            <input asp-for="FotoProduto" class="form-control" />
            <span asp-validation-for="FotoProduto" class="text-danger"></span>

            <label for="DescricaoProduto" class="control-label">Descrição </label>
            <input asp-for="DescricaoProduto" class="form-control" />
            <span asp-validation-for="DescricaoProduto" class="text-danger"></span>

            <label for="PrecoProduto" class="control-label">Preço </label>
            <input asp-for="PrecoProduto" class="form-control" />
            <span asp-validation-for="PrecoProduto" class="text-danger"></span>

            <label for="EstoqueProduto" class="control-label">Quantidade de Estoque </label>
            <input asp-for="EstoqueProduto" class="form-control" />
            <span asp-validation-for="EstoqueProduto" class="text-danger"></span>

            <br />
            <input type="submit" value="Salvar dados" />
            <br />
            <span class="text-danger">@ViewBag.Erro</span>
        </form>
    </div>
</div>