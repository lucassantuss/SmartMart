@model List<ItensPedidoViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center><h2>Carrinho de Compras</h2> </center>
<br />
<div class="fundo-vitrine">
    <img src="~/images/carrinho.png" />
    Há @ViewBag.TotalCarrinho itens no carrinho.
    <a href="/Carrinho/Visualizar">Visualizar</a>
</div>
<br />
<br />
<div class="fundo-vitrine">
    <ul class="ul-vitrine">
        @foreach (var itensPedido in Model)
        {
            <li class="li-vitrine">
                <a href="/Carrinho/Detalhes/?idCidade=@itensPedido.Id">
                </a>
            </li>
        }
    </ul>
</div>

@section Styles {
    <link href="@Url.Content("~/css/carrinho.css")" rel="stylesheet" type="text/css" />
}